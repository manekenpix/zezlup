  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) GL RGB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/zezlup",
      "args": ["${workspaceFolder}/data/true_colour/baboon.png"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) GL RGBA",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/zezlup",
      "args": ["${workspaceFolder}/data/true_colour_alpha/minigame.png"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) GL Indexed",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/zezlup",
      "args": ["${workspaceFolder}/data/indexed/parrot.png"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
